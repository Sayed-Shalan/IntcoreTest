<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/intcore_theme</item>
    </style>
    <style name="ToolBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/intcore_theme</item>
        <item name="colorControlNormal">@color/white</item>

    </style>
    <style name="ToolBarTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/intcore_theme</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="ToolBarThemeRed" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/intcore_theme</item>
        <item name="colorControlNormal">@color/red</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorSecondary">@color/red</item>
        <item name="actionMenuTextColor">@color/red</item>
    </style>

    <style name="TextLabel" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/intcore_gray</item>
        <item name="colorControlActivated">@color/intcore_theme</item>
    </style>
</resources>
